<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-mapping package="mx.unam.tic.diplomado.hibernate">
    <class name="Registro" table="registros">
        <id name="id" column="id">
            <generator class="identity" />
        </id>

        <property name="nombre" column="nombre" length="40" not-null="false" />
        <property name="apellido" column="apellido" length="40" not-null="false" />
        <property name="edad" column="edad" type="integer" not-null="false" />
    </class>
</hibernate-mapping>