<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="connection.url">jdbc:mariadb://localhost:3306/modulo04</property>
        <property name="connection.username">root</property>
        <property name="connection.password">MaPassw</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MariaDB103Dialect</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">none</property>

        <mapping resource="dgtic/modelo/entidades/agencia/Agencia.hbm.xml" />
        <mapping class="dgtic.modelo.entidades.agencia.asignaciones.AutobusAsignado" />
        <mapping class="dgtic.modelo.entidades.agencia.asignaciones.ViajeAsignado" />
        <mapping class="dgtic.modelo.entidades.autobus.Autobus" />
        <mapping class="dgtic.modelo.entidades.autobus.ClaseBus" />
        <mapping class="dgtic.modelo.entidades.autobus.ClaseTuribus" />
        <mapping class="dgtic.modelo.entidades.empleado.Empleado" />
        <mapping class="dgtic.modelo.entidades.puesto.Puesto" />
        <mapping class="dgtic.modelo.entidades.viaje.TipoTour" />
        <mapping class="dgtic.modelo.entidades.viaje.TipoViaje" />
        <mapping class="dgtic.modelo.entidades.viaje.Viaje" />

    </session-factory>

</hibernate-configuration>